<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="dao.IFavoritesDao">
  	<select id="selectAllFavorites" resultType="java.util.HashMap">
  		SELECT *
  		FROM favorites
  	</select>
  	<select id="selectFavorites" parameterType="int" resultType="java.util.HashMap">
  		SELECT *
  		FROM favorites
  		WHERE num=#{num}
  	</select>
  	<insert id="insertFavorites" parameterType="java.util.HashMap">
  		INSERT INTO favorites
  		VALUES 0,#{user_name},#{book_num},#{regdate}
  	</insert>
  	<update id="updateFavorites" parameterType="java.util.HashMap" >
  		UPDATE favorites
  		SETuser_name=#{user_name},book_num=#{book_num},regdate=#{regdate}
  		WHERE num=#{num}
  	</update>
  	<delete id="deleteFavorites" parameterType="int">
  		DELETE FROM favorites
  		WHERE num=#{num}
  	</delete>
  	
  	
  </mapper>